{
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register", "./init/index.ts"]
  },
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["./node_modules"]
}
