doctype html
head
    meta(name='viewport' content='width=device-width')
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    title Email
    style(type="text/css").
        p {
            margin: 0;
        }
body
    table(width='100%' height='100%' cellpadding='0' cellspacing='0' bgcolor='#f5f6f7' style='font-size:16px;')
        tbody
            tr
                td(height='50')
            tr
                td(align='center' valign='top')
                    table.main-content(width='600' cellpadding='0' cellspacing='0' bgcolor='#ffffff' style='border:1px solid #f1f2f5;')
                        tr
                            td(colspan='3' align='center' height='60' bgcolor='#ffffff' style='border-top: 5px solid #292663;border-bottom:1px solid #eeeeee; padding-left:16px;')
                                img(src=logo width='250' height='53' style='display:block;width:250px;height:53px;')
                        tr
                            td(colspan='3' height='20')
                        tr
                            td(width='20')
                            td(align='left')
                                table(cellpadding='0' cellspacing='0' width='100%')
                                    tr
                                        td(colspan='3' height='20')
                                    tr
                                        td(colspan='3')
                                    div!= content
                                    tr
                                        td(colspan='3' height='20')
                                    tr
                                        td(colspan='3' style='text-align: center;')
                                            span(style='font-family:Helvetica,Arial,sans-serif;font-size:12px;color:#cccccc;') #{productName}
                            td(width='20')
                        tr(colspan='3' height='20')
            tr
                td(colspan='3' height='20')
